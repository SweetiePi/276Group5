<%= form_for Post.new, remote: true, html: {class: 'form-horizontal new_post'} do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :channel_type, value: post_channel_type %>
  <%= f.hidden_field :channel_id, value: channel_id %>

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Post Content', rows: 3, style: 'max-width: 100%;' %>
      <span id="helpBlock" class="help-block">Markdown formatting supported. See <a href="https://daringfireball.net/projects/markdown/basics" target="_blank">Guide</a> for help.</span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6 col-xs-offset-6">
      <%= f.submit "Send", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
