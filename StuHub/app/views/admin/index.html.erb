<% provide(:title, 'General Settings - Admin') %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">General (StuHub Site-Wide) Settings</h1>
  </div>
  <div class="panel-body">


    <%= form_for(StuHubSettings, url: admin_path, html: {class: 'form-horizontal'}) do |f| %>
      <h4>Maintenance Mode</h4>

      <div class="form-group">
        <%= f.label :maintenance_message, 'Toggle', class: 'col-sm-3 col-md-2 control-label' %>
        <div class="col-sm-9 col-md-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :maintenance_mode %> Maintenance Mode
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :maintenance_message, 'Message', class: 'col-sm-3 col-md-2 control-label' %>
        <div class="col-sm-9 col-md-10">
          <%= f.text_field :maintenance_message, class: 'form-control', placeholder: 'Displayed on the banner alert' %>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-xs-6 col-xs-offset-3 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <%= f.submit 'Save', class: "btn btn-primary btn-block", id: 'submit_btn' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
