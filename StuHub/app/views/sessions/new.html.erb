<% provide(:title, "Login") %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1" style="text-align: center;">
    <h1>Login</h1>
    <div class="row" style="margin: 10px 0;">
      <div class="col-sm-8 col-sm-offset-2">
        <%= form_for(:session) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <%= link_to 'Forgot Password', new_password_reset_path, class: 'btn btn-default btn-block', role: 'button', id: 'login_forgot_btn' %>
            </div>
            <div class="col-xs-6">
              <!-- Check for User (in controller/model), redirect to home_path -->
              <%= f.submit 'Login', class: 'btn btn-primary btn-block', role: 'button', id: 'login_submit' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
