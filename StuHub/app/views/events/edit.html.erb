<% provide(:title, "Edit Event \"#{@event.title}\"") %>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Event Details</h4>
      </div>
      <div class="panel-body">
        <%= render 'form' %>

        <div class="row" style="margin-top: 16px;">
          <div class="col-xs-6 col-xs-offset-3 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <%= link_to 'Back', @event, class: "btn btn-danger btn-block", role: "button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
            <h1 class="panel-title">User Calendar</h1>
      </div>
      <div class="panel-body">
        <div id="home_calendar"></div>
      </div>
    </div>
  </div>
</div>
