<%= form_for(@event, html: {class: 'form-horizontal'}) do |f| %>
  <%= render partial: 'shared/error_messages', locals: {obj: @event} %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 3 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, 'Start Time', class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.datetime_select :start_time, class: 'form-control', ampm: true, minute_step: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, 'End Time', class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.datetime_select :end_time, class: 'form-control', ampm: true, minute_step: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dow, 'Recurrence', class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%(0..6).each do |i| %>
        <label class="checkbox-inline">
          <%= f.check_box :dow, {multiple: true}, i.to_s, nil %> <%= Event.weekdays[i] %>
        </label>
      <% end%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, 'Recur From', class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.date_select :start_date, class: 'form-control', ampm: true, minute_step: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, 'Recur Until', class: 'col-sm-4 col-md-3 control-label' %>
    <div class="col-sm-8 col-md-9">
      <%= f.date_select :end_date, class: 'form-control', ampm: true, minute_step: 5 %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <%= f.submit 'Save', class: "btn btn-primary btn-block", id: 'submit_btn' %>
    </div>
  </div>
<% end %>
