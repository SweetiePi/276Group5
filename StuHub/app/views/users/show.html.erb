<% provide(:title, @user.name + "'s Profile") %>

<div class="row">
  <div class="col-sm-9 col-sm-push-3" id="profile_content">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= gravatar_for @user, size: 50, class: 'img-responsive img-rounded center-block visible-xs-inline-block' %> <%= @user.name %> <small><%= @user.admin? ? "Administrator" : "Standard User" %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="panel-title">&nbsp;</h1>
          </div>
          &nbsp;
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-3 col-sm-pull-9" id="profile_sidebar">
    <div class="row">
      <div class="col-sm-12 hidden-xs" id="profile_avatar_container">
        <%= gravatar_for @user, size: 200, class: 'img-responsive img-rounded center-block' %>
      </div>
    </div>
    <div class="row" style="margin-top: 20px;">
      <div class="col-xs-12" id="profile_sidebar_content">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="panel-title">User Menu</h1>
          </div>
          <div class="list-group">
            <a href="#" class="list-group-item active">&nbsp;</a>
            <a href="#" class="list-group-item">&nbsp;</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
