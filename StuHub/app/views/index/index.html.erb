<% content_for :title, "Welcome" %>
<div class="row" style="text-align: center;">
  <div class="col-sm-8" id="index_about_content">
    <h1>Welcome</h1>
    <h4>Insert some image or other here.</h4>
  </div>
  <div class="col-sm-4" id="index_user_column">
    <div class="row" id="index_login_content">
      <div class="col-xs-2"></div>
      <div class="col-xs-8 col-sm-12" id="index_login_form_container">
        <h1>Login</h1>
        <form id="index_login_form">
          <div class="form-group">
            <input type="email" form="index_login_form" class="form-control" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" form="index_login_form" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" form="index_login_form" id="remember"> Remember my login
            </label>
          </div>
          <button type="submit" form="index_login_form" class="btn btn-default">Login</button>
        </form>
      </div>
      <div class="col-xs-2"></div>
    </div>
    <div class="row" id="index_register_content">
      <div class="col-xs-2"></div>
      <div class="col-xs-8 col-sm-12" id="index_register_form_container">
        <h1>Register</h1>
        <form id="index_register_form">
          <div class="form-group">
            <input type="email" form="index_register_form" class="form-control" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" form="index_register_form" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="password" form="index_register_form" class="form-control" id="password_verify" placeholder="Verify Password">
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" form="index_login_form" id="agree"> I agree to the <%= link_to 'Terms of Use', terms_path %> of this website.
            </label>
          </div>
          <button type="submit" form="index_register_form" class="btn btn-default">Register</button>
        </form>
      </div>
      <div class="col-xs-2"></div>
    </div>
  </div>
</div>
