<% content_for :content do %>
<div class="row">
  <div class="col-sm-9 col-sm-push-3">
    <%= yield %>
  </div>
  <div class="col-sm-3 col-sm-pull-9">
    <ul class="nav nav-pills nav-stacked">
      <li role="presentation" class="<%= 'active' if current_page?(admin_path) %>"><%= link_to 'General Settings', admin_path %></li>
      <li role="presentation" class="<%= 'active' if current_page?(admin_users_path) %>"><%= link_to 'User Management', admin_users_path %></li>
      <li role="presentation" class="<%= 'active' if current_page?(institutions_path) %>"><%= link_to 'Institutions', institutions_path %></li>
    </ul>
  </div>
</div>
<% end %>
<%= render template: "layouts/application" %>
