<% content_for :content do %>

<div class="row">
  <div class="col-sm-9">
    <div class="page-header">
      <h1><%= yield(:page_title) %> <small><%= yield(:mini_title) %></small></h1>
    </div>
    <div id="help_content" style="font-size: 16px;">
      <%= yield %>
    </div>
  </div>
  <div class="col-sm-3">
    <p><%#= link_to 'Help Index', help_path, class: 'btn btn-primary btn-lg btn-block', role: 'button' %></p>
    <% if logged_in? and false%>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">StuHub Help</h1>
      </div>
      <div class="list-group">
        <%= link_to 'General', help_item_path(page: 'general'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'general'))}" %>
        <%= link_to 'Registration', help_item_path(page: 'registration'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'registration'))}" %>
        <%= link_to 'Courses', help_item_path(page: 'courses'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'courses'))}" %>
        <%= link_to 'Groups', help_item_path(page: 'groups'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'groups'))}" %>
        <% if current_user.admin? %>
          <%= link_to 'Administration', help_item_path(page: 'admin'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'admin'))}" %>
          <%= link_to 'Institutions', help_item_path(page: 'institutions'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'institutions'))}" %>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">StuHub Information</h1>
      </div>
      <div class="list-group">
        <%= link_to 'About Us', about_path, class: "list-group-item #{'active' if current_page?(about_path)}" %>
        <% if logged_in? %>
        <%= link_to 'Recent Changes', help_item_path(page: 'changes'), class: "list-group-item #{'active' if current_page?(help_item_path(page: 'changes'))}" %>
        <% end %>
        <%= link_to 'Terms of Use', terms_path, class: "list-group-item #{'active' if current_page?(terms_path)}" %>
        <%= link_to 'FAQ', faq_path, class: "list-group-item #{'active' if current_page?(faq_path)}" %>
        <%= link_to 'Contact Us', contact_path, class: "list-group-item #{'active' if current_page?(contact_path)}" %>
      </div>
    </div>
  </div>
</div>

<% end %>

<%= render template: "layouts/application" %>
