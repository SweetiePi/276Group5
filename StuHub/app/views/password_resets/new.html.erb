<% provide(:title, "Forgot password") %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1" style="text-align: center;">
    <h1>Forgot Password</h1>
    Please enter the email address of the account to retrieve your password for.
    <div class="row" style="margin: 10px 0;">
      <div class="col-sm-8 col-sm-offset-2">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <!-- On success or fail, redirect to login page with message saying if correct will get email -->
          <!-- <button type="submit" form="forgot_password_form" class="btn btn-primary btn-block" id="submit">Submit</button> -->
          <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
